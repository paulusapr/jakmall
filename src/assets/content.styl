@import './style.styl'

.content
    display: flex
    flex-direction: row
    width: 100%
    height: 100%
    overflow: auto
    .line-border
        border: 1px solid $background
        margin-top: 70px
        margin-bottom: 20px
    .final-result
        display: flex
        width: 100%
        height: 100%
        align-items: center
        justify-content: center
        .final-content
            display: flex
            flex-direction: column
            .title
                margin-bottom: 26px
            .order-detail
                display: flex
                flex-direction: column
                margin-top: 26px
                margin-bottom: 61px
                width: 100%
                span:nth-child(1)
                    font-size: 14px;
                    color: $link;
                    margin-bottom: 9px
                span:nth-child(2)
                    opacity: 0.6;
                    font-size: 14px;
                    color: $link;
    .title
        display: flex
        position: relative
        flex-direction: column
        span
            font-size: 36px;
            font-weight: bold;
            color: $theme;
            z-index: 1
        .underline
            position: absolute
            bottom: 6px
            width: 100%
            border: 3px solid $border
            z-index: 0
    .back-btn
        display: flex
        flex-direction: row
        align-items: center
        svg
            opacity: 0.8
            font-size: 14px
            font-weight: 500
            color: $subtext
        span
            margin-left: 10px
            opacity: 0.8
            font-size: 14px
            font-weight: 500
            color: $subtext
    .form
        display: flex
        flex-direction: column
        width: 80%
        padding-top: 31px
        padding-left: 40px
        padding-right: 30px
        padding-bottom: 20px
        .back-btn
            margin-bottom: 24px
        .form-title
            display: flex
            flex-direction: row
            width: 100%
            justify-content: space-between
            align-items: center
            margin-bottom: 30px
            .checkbox
                display: flex
                flex-direction: row
                align-items: center
                .checkbox
                    width: 18px
                    height: 18px
                    outline: 1px solid $checkbox
                    cursor: pointer;
                    font-size: 18px;
                    position: relative;
                    &:after
                        position: absolute
                        width: 100%
                        height: 100%
                        top: 0
                        content: " "
                        background-color: $text
                        color: $checkbox
                        display: inline-block
                        visibility: visible
                        padding: 0px 3px
                    &:checked:after
                        content: "âœ“";
                        font-size: 16px;
                span
                    opacity: 0.8
                    font-size: 14px
                    font-weight: 500
                    color: $subtext
                    margin-left: 10px
        .form-group
            display: flex
            flex-direction: row
            justify-content: space-between
            align-items: center
            width: 100%
            margin-bottom: 10px
            &:last-child
                margin-bottom: 0px
            input
                width: 50%
                height: 60px;
                border: solid 1px $inputborder;
                background-color: $text
                padding-left: 15px
                font-size: 16px;
                &:nth-child(1)
                    margin-right: 10px     
                &::placeholder
                    opacity: 0.4;
                    font-size: 16px;
                    font-weight: 500;
                    color: $link;
            textarea
                width: calc(50% - 5px)
                height: 120px
                padding-top: 21px
                padding-left: 15px
                font-size: 16px;
                border: solid 1px $inputborder;
                background-color: $text
                &::placeholder
                    opacity: 0.4;
                    font-size: 16px;
                    font-weight: 500;
                    color: $link;
    .result
        display: flex
        flex-direction: column
        width: 20%
        padding-left: 19px
        padding-right: 22px
        padding-bottom: 20px
        padding-top: 80px
        justify-content: space-between
        .summary
            display: flex
            width: 100%
            flex-direction: column
            .main
                font-size: 24px;
                font-weight: bold;
                color: $theme;
            .sub-main
                font-size: 14px;
                color: $link;
            .sub
                opacity: 0.6;
                font-size: 14px;
                color: $subtext;
            .sub-text
                font-size: 16px;
                font-weight: 500;
                color: $checkbox;
            .underline-info
                margin-top: 21px
                margin-bottom: 21px
                display: flex
                width: 30%
                border: 0.5px solid $border
        .pay-btn
            display: flex
            width: 100%
            flex-direction: column
            .info
                display: flex
                flex-direction: row
                justify-content: space-between
                align-items: center
                span
                    opacity: 0.6;
                    color: $subtext;
                    font-size: 14px;
                    &:nth-child(2)
                        opacity: 1
                        color: $link
                        font-weight: bold
                &:nth-child(1)
                    margin-bottom: 12px
                &:nth-child(2)
                    margin-bottom: 12px
            .price
                margin-top: 24px
                display: flex
                flex-direction: row
                width: 100%
                justify-content: space-between
                margin-bottom: 30px
                span:nth-child(1)
                    font-size: 24px;
                    font-weight: bold;
                    color: $theme;
                span:nth-child(2)
                    font-size: 24px;
                    font-weight: bold;
                    color: $theme;
            .next
                display: flex
                width 100%
                padding: 20px 0px
                background: $theme
                justify-content: center
                align-items: center
                font-size: 18px;
                font-weight: 500;
                color: $text;